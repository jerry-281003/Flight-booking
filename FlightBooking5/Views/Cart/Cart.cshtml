@{
}
@model Cart

<link rel="stylesheet" href="/css/Cart.css">
<link rel="stylesheet" href="/css/flightcard.css">
<section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card">
          <div class="card-body p-4">
            <div class="row">
              <div class="col-lg-7">
                                <h5 class="mb-3">
                                    <a asp-controller="Home" asp-action="index" class="text-body">
                   <i class="fas fa-long-arrow-alt-left me-2"></i>Return to search flight</a></h5>               
                <hr>
                <div class="d-flex justify-content-between align-items-center mb-4">
                  <div>
                    <p class="mb-1">Shopping cart</p>
                    
                  </div>
                  <div>
                    <p class="mb-0"><span class="text-muted">Sort by:</span> <a href="#!"
                        class="text-body">price <i class="fas fa-angle-down mt-1"></i></a></p>
                  </div>
                </div>
                 @foreach (var line in Model.Lines)
                                {
                                    <div class="flight-card">
                                        <div class="flight-departure">
                                            <h3>Departure</h3>
                                            <p class="country">@line.Flight.DepartureCountry)</p>
                                            <p class="time">@line.Flight.DepartureTime</p>
                                        </div>
                                        <div class="flight-logo">
                                            <img src="/img/planeicon1.png" alt="Flight Logo">
                                        </div>
                                        <div class="flight-arrival">
                                            <h3>Arrival</h3>
                                            <p class="country">@line.Flight.ArrivalCountry</p>
                                            <p class="time">@line.Flight.ArrivalTime</p>
                                        </div>
                                        <div class="flight-details">
                                            <div class="flight-info">
                                                <p class="aircode">@line.Flight.AircraftType</p>
                                                <p class="airtype">Aircode:@line.Flight.AircraftCode</p>
                                                <p class="class">Class:@line.Flight.Class</p>
                                            </div>
                                            <div class="book-button-container">
                                                <a href="/Cart/RemoveFromCart/?flightId=@line.Flight.flightId" class="book-button">Remove</a>
                                            </div>
                                            <div class="book-button-container">
                                                <span> @line.Flight.Price</span>
                                            </div>
                                        </div>
                                    </div>
                                }


              

                            </div>
              <div class="col-lg-5">

                <div class="card bg-primary text-white rounded-3">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                      <h5 class="mb-0">Information details</h5>
                   
                    </div>

                    <p class="small mb-2">Card type</p>
                    <a href="#!" type="submit" class="text-white"><i
                        class="fab fa-cc-mastercard fa-2x me-2"></i></a>
                    <a href="#!" type="submit" class="text-white"><i
                        class="fab fa-cc-visa fa-2x me-2"></i></a>
                    <a href="#!" type="submit" class="text-white"><i
                        class="fab fa-cc-amex fa-2x me-2"></i></a>
                    <a href="#!" type="submit" class="text-white"><i class="fab fa-cc-paypal fa-2x"></i></a>

                    <form class="mt-4">
                      <div class="form-outline form-white mb-4">
                          <input type="text" id="Email" class="form-control form-control-lg" siez="17"
                          placeholder="Email!" />
                          <label class="form-label" for="Email">Email!</label>
                      </div>

                      <div class="form-outline form-white mb-4">
                            <input type="text" id="PhoneNumber" class="form-control form-control-lg" siez="17"
                          placeholder="Phone Number" minlength="10" maxlength="12" />
                          <label class="form-label" for="PhoneNumber">Phone Number</label>
                      </div>

                      <div class="row mb-4">
                        <div class="col-md-6">
                          <div class="form-outline form-white">
                            <input type="text" id="typeText" class="form-control form-control-lg"
                              placeholder="First Name" size="7" id="exp" minlength="10" maxlength="10" />
                              <label class="form-label" for="typeText">FirstName</label>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-outline form-white">
                            <input type="text" id="typeText" class="form-control form-control-lg"
                              placeholder="Last Name" size="1" minlength="10" maxlength="10" />
                              <label class="form-label" for="LastName">LastName</label>
                          </div>
                        </div>
                      </div>

                    </form>

                    <hr class="my-4">
                    @foreach (var line in Model.Lines)
                    {
                        <div class="d-flex justify-content-between mb-4">
                                                <p class="mb-2">Vé @line.Flight.DepartureCountry đến @line.Flight.ArrivalCountry</p>
                            <p class="mb-2">@line.Flight.Price$</p>
                        </div>                    
                    
                    }
                    <form id="form-submit" asp-controller="Payment" asp-action="CreatePayment" method="post" >
                             <input  type="hidden" name="currency" value="USD">
                             <input type="hidden" name="total" value="@Model.ComputeTotalValue()">
                    <button type="submit"  class="btn btn-info btn-block btn-lg">
                      <div class="d-flex justify-content-between">
                        <span> @Model.ComputeTotalValue()$</span>
                        <span> Checkout <i class="fas fa-long-arrow-alt-right ms-2"></i></span>
                                                <
                      </div>
                    </button>
                    </form>
                  </div>
                </div>

              </div>

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>