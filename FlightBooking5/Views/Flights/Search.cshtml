@{
}
@model List<Flight>
@if (Model.Count > 0)
{
    <h3>Available Flights:</h3>
    <ul>
        @foreach (var flight in Model)
        {
            <li>
                @flight.DepartureCountry - @flight.ArrivalCountry @flight.Price
            </li>
            <!-- Display more flight details as needed -->
        }
    </ul>
}
else
{
    <p>No flights found.</p>
}


